# Sgorblex's bash config
# ~/.config/bash/aliases.bashrc

# ls aliases
alias ls='lsd' # requires lsd
alias l='ls'
alias ll='ls -l'
alias la='ls -A'

# other
alias cls='clear'
alias po='poweroff'
alias pw='lpass show -c --password' # requires lastpass-cli
alias xc='xclip -sel clip' # requires xclip
alias clk='tty-clock -scC 1' # requires tty-clock
alias r='ranger' # requires ranger
