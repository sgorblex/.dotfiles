[module/filesystem-HDD]
type = internal/fs

; Mountpoints to display
mount-0 = /home

format-mounted =  﫭 <label-mounted> <bar-used>
format-unmounted = <label-unmounted>

; Available tokens:
;   %mountpoint%
;   %type%
;   %fsname%
;   %percentage_free%
;   %percentage_used%
;   %total%
;   %free%
;   %used%
; Default: %mountpoint% %percentage_free%%
; label-mounted = %mountpoint%: %percentage_free%% of %total%
; label-mounted = %fsname%: %used%/%free% (%percentage_used%%)
label-mounted = HDD: %used%/%free%

label-unmounted = %mountpoint% 
label-unmounted-foreground = #55


bar-used-indicator =
bar-used-width = 15
bar-used-foreground-0 = #000099
bar-used-fill = ▐
